{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": ["./node_modules/@types", "./typechain-types"]
  },
  "include": [
    "./contracts/**/*.ts",
    "./test/**/*.ts",
    "./scripts/**/*.ts",
    "./hardhat.config.ts"
  ],
  "exclude": ["node_modules"]
}
