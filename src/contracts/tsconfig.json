{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": ["../node_modules/@types"]
  },
  "include": [
    "./test/**/*.ts",
    "./scripts/**/*.ts",
    "./hardhat.config.cjs"
  ],
  "exclude": ["node_modules"]
}
